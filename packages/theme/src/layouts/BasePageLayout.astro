---
import type { Locale } from '../i18n/config';
import BaseShell from './shells/BaseShell.astro';

interface Props {
	locale?: Locale;
	title: string;
	description: string;
}

const { locale, title, description } = Astro.props as Props;
---

<BaseShell locale={locale} title={title} description={description}>
	<slot />
</BaseShell>
