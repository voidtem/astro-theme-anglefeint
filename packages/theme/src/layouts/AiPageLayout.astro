---
import type { Locale } from '../i18n/config';
import AiShell from './shells/AiShell.astro';

interface Props {
	locale?: Locale;
	title: string;
	description: string;
}

const { locale, title, description } = Astro.props as Props;
---

<AiShell locale={locale} title={title} description={description}>
	<slot />
</AiShell>
